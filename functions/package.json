{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "bundle": "browserify --outfile generated/bundle.js --node --ignore-missing --entry standalone.js",
    "standalone": "firebase emulators:exec --only database 'node standalone.js'"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "express": "^4.17.1",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.7.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.8"
  },
  "devDependencies": {
    "browserify": "^16.5.2",
    "eslint": "^7.2.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.2.1"
  },
  "private": true
}
